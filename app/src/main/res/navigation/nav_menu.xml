<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_menu"
    app:startDestination="@id/navigation_main">

    <fragment
        android:id="@+id/navigation_main"
        android:name="com.nazirman.proyekakhir.MainActivity"
        tools:layout="@layout/activity_main" >
        <action
            android:id="@+id/action_navigation_main_to_detailhewan"
            app:destination="@+id/navigation_detailhewan"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_detailhewan"
        android:name="com.nazirman.proyekakhir.ui.hewan.DetailHewan"
        tools:layout="@layout/fragment_detail_hewan">
        <action
            android:id="@+id/action_navigation_detailhewan_to_main"
            app:destination="@+id/navigation_main"/>

    </fragment>

    <fragment
        android:id="@+id/navigation_name"
        android:name="com.nazirman.proyekakhir.ui.kuis.Name"
        android:label="fragment_name"
        tools:layout="@layout/fragment_namequestion" >
        <action
            android:id="@+id/action_navigation_name_to_soalkuis"
            app:destination="@id/navigation_soalkuis" />
        <action
            android:id="@+id/action_navigation_name_to_main"
            app:destination="@+id/navigation_main" />
    </fragment>
    <fragment
        android:id="@+id/navigation_soalkuis"
        android:name="com.nazirman.proyekakhir.ui.kuis.QuestionsActivity"
        android:label="fragment_soalkuis"
        tools:layout="@layout/fragment_questions">
        <action
            android:id="@+id/action_navigation_soalkuis_to_name"
            app:destination="@+id/navigation_name"/>
    </fragment>
    <fragment
        android:id="@+id/navigation_result"
        android:name="com.nazirman.proyekakhir.ui.kuis.ResultsActivity"
        android:label="fragment_results"
        tools:layout="@layout/fragment_results">
        <action
            android:id="@+id/action_navigation_result_to_name"
            app:destination="@+id/navigation_name"/>
        <action
            android:id="@+id/action_navigation_result_to_main"
            app:destination="@+id/navigation_main"/>
    </fragment>
    <fragment
        android:id="@+id/navigation_lens"
        android:name="com.nazirman.proyekakhir.ui.lens.LensActivity"
        android:label="fragment_lens"
        tools:layout="@layout/fragment_lens">
        <action
            android:id="@+id/action_navigation_lens_to_cam"
            app:destination="@+id/navigation_cam"/>
        <action
            android:id="@+id/action_navigation_lens_to_main"
            app:destination="@+id/navigation_main"/>
    </fragment>
    <fragment
        android:id="@+id/navigation_cam"
        android:name="com.nazirman.proyekakhir.ui.lens.LensFragment"
        android:label="fragment_cam"
        tools:layout="@layout/fragment_lens_camera">
        <action
            android:id="@+id/action_navigation_cam_to_lens"
            app:destination="@+id/navigation_lens"/>
        <action
            android:id="@+id/action_navigation_cam_to_main"
            app:destination="@+id/navigation_main"/>
    </fragment>


</navigation>