<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:discrollve="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.hewan.DetailHewan">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/nama_hewan"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/blue"
                android:fontFamily="@font/poppinsbold"
                android:gravity="center"
                android:padding="25dp"
                android:text="@string/nama_hewan"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                discrollve:layout_constraintEnd_toEndOf="parent"
                discrollve:layout_constraintStart_toStartOf="parent"
                discrollve:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/gambar_hewan"
                android:layout_width="413dp"
                android:layout_height="717dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:contentDescription="Hewan"
                android:src="@drawable/hkucing"
                app:layout_constraintTop_toBottomOf="@id/nama_hewan"
                discrollve:discrollve_alpha="true"
                discrollve:discrollve_translation="fromLeft|fromBottom"
                discrollve:layout_constraintEnd_toEndOf="parent"
                discrollve:layout_constraintHorizontal_bias="0.0"
                discrollve:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/keteranganHewan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/purple"
                android:fontFamily="serif"
                android:gravity="center"
                android:padding="20dp"
                android:text="Kucing adalah hewan peliharaan yang lucu dan lincah. Mereka memiliki bulu yang lembut dan mata yang tajam. Kucing suka bermain dengan bola atau tali, dan mereka bisa menjilati diri sendiri dengan lidah yang kasar."
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/gambar_hewan"
                discrollve:discrollve_alpha="true"
                discrollve:discrollve_translation="fromBottom" />

            <ImageView
                android:id="@+id/habitat"
                android:layout_width="405dp"
                android:layout_height="274dp"
                android:background="@color/white"
                android:src="@drawable/hkucing"
                app:layout_constraintTop_toBottomOf="@id/keteranganHewan"
                discrollve:discrollve_alpha="true"
                discrollve:discrollve_translation="fromLeft|fromBottom" />

            <TextView
                android:id="@+id/keteranganHabitat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/purple"
                android:fontFamily="serif"
                android:gravity="center"
                android:padding="20dp"
                android:text="Kucing adalah hewan peliharaan yang lucu dan lincah. Mereka memiliki bulu yang lembut dan mata yang tajam. Kucing suka bermain dengan bola atau tali, dan mereka bisa menjilati diri sendiri dengan lidah yang kasar."
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/habitat"
                discrollve:discrollve_alpha="true"
                discrollve:discrollve_translation="fromLeft" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                discrollve:layout_constraintGuide_begin="20dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_sound"
        app:backgroundTint="@color/white"
        app:fabSize="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/blue" />
</androidx.constraintlayout.widget.ConstraintLayout>